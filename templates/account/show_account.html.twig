{% extends 'base.html.twig' %}
{% block titre %}Mon compte{% endblock %}
{% block body %}

        <h1 class="text-center">Vos informations</h1>

     <div class="row">

        <div class="col-8 mx-auto">

            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Voir mon compte</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Mes commandes</button>
                </li>
                {# <li class="nav-item" role="presentation">
                    {# <button class="nav-link" id="pills-contact-tab" data-bs-toggle="pill" data-bs-target="#pills-contact" type="button" role="tab" aria-controls="pills-contact" aria-selected="false">Contact</button> #}
                {# </li> #} 
            </ul>
            <div class="tab-content" id="pills-tabContent">

                    <div class="card text-center">
                        <div class="card-header bg-warning">
                            Mes informations de compte
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">{{app.user.firstname}} {{app.user.lastname}}</h5>
                            <p class="card-text">Email: {{app.user.email}}</p>
                            <p class="card-text">Role: {{ app.user.roles is same as 'ROLE_ADMIN' ?  'Administrateur': 'Membre' }}</p>

                            <div class="row">
                                <div class="col-6">
                                    <a href="#" class="btn btn-warning">Changer mon mot de passe</a>
                                </div>
                                <div class="col-6">
                                    <a href="#" class="btn btn-warning">Modifier mes informations</a>
                                </div>
                            
                            </div>
                            
                    
                        </div>
                    </div>


            </div>   {#  end .pills-profile-tab #}


            <div class="tab-pane fade" id="pills-profile" role="tabpanel" aria-labelledby="pills-profile-tab">..
             <div class="row">
                <div class="col">
                    <table class="table">
                        <thead class="table-dark">
                            <tr>
                                <th>Commande N #</th>
                                <th>Membre</th>
                                <th>Produit</th>
                                <th>Quantité</th>
                                <th>Montant</th>
                                <th>Etat</th>
                                <th>Passée le</th>
                                <th>Actions</th>
                            </tr>
                        
                        </thead>
                        <tbody>
                        
                        {% for command in commands %}
                            <tr>
                                <td>{{ command.id }}</td>
                                <td>{{ command.user.id}}-</td>
                                <td>{{ command.id }}</td>
                                <td>{{ command.id }}</td>
                                <td>{{ command.id }}</td>
                                <td>{{ command.id }}</td>
                                <td>{{ command.id }}</td>
                                <td>{{ command.id }}</td>
                            </tr>




                        </tbody>
                    </table>
                </div>
             </div>
            
            
            </div>


            <div class="tab-pane fade" id="pills-contact" role="tabpanel" aria-labelledby="pills-contact-tab">...</div>
            </div>
        </div>
     </div>   

{% endblock %}